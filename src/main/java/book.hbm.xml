<?xml version="1.0"?> <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.bean.BookBean" table="books">
		<id name="bookId">
			<generator class="increment" />
		</id>

		<property name="bookName"></property>
		<property name="author"></property>
		<property name="price"></property>
		<property name="qty"></property>

	</class>
</hibernate-mapping>